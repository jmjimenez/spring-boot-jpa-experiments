{
  "java.debug.settings.onBuildFailureProceed": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-21",
      "path": "~/.sdkman/candidates/java/current",
      "default": true
    }
  ],
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": [
        "-l"
      ]
    },
    "zsh": {
      "path": "/bin/zsh",
      "args": [
        "-l"
      ]
    }
  },
  "terminal.integrated.env.linux": {
    "JAVA_HOME": "${env:JAVA_HOME}"
  },
  "java.import.maven.enabled": true,
  "java.import.gradle.enabled": false,
  "java.project.sourcePaths": [
    "src/main/java"
  ],
  "java.project.testSourcePaths": [
    "src/test/java"
  ],
  "java.project.outputPath": "target/classes",
  "java.project.testOutputPath": "target/test-classes",
  "java.test.config": [
    {
      "name": "unit",
      "vmargs": [
        "--enable-preview",
        "-Dfile.encoding=UTF-8",
        "-Dspring.profiles.active=test"
      ],
      "workingDirectory": "${workspaceFolder}",
      "env": {
        "JAVA_HOME": "${env:JAVA_HOME}"
      },
      "args": [
        "-Dtest.include=**/*Test.java",
        "-Dtest.exclude=**/*IntegrationTest.java,**/*TestSuite.java"
      ]
    },
    {
      "name": "integration",
      "vmargs": [
        "--enable-preview",
        "-Dfile.encoding=UTF-8",
        "-Dspring.profiles.active=test"
      ],
      "workingDirectory": "${workspaceFolder}",
      "env": {
        "JAVA_HOME": "${env:JAVA_HOME}"
      },
      "args": [
        "-Dtest.include=**/*IntegrationTest.java",
        "-Dtest.exclude=**/*TestSuite.java"
      ]
    }
  ],
  "java.test.defaultConfig": "unit",
  "java.test.console": "integratedTerminal",
  "java.test.editor.enableShortcuts": true,
  "java.test.runner": "junit",
  "java.test.workingDirectory": "${workspaceFolder}",
  "java.test.consoleOptions": "openOnSessionStart",
  "java.test.additionalVmArgs": [
    "--enable-preview",
    "-Dfile.encoding=UTF-8"
  ],
  "java.test.discovery.enabled": true,
  "java.test.discovery.includePatterns": [
    "**/*Test.java",
    "**/*Tests.java"
  ],
  "java.test.discovery.excludePatterns": [
    "**/target/**"
  ],
  // Enable standard Java formatting
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.comments.enabled": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // Java-specific formatting settings
  "[java]": {
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.defaultFormatter": "redhat.java"
  },
  // Configure auto-save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.exclude": {
    "**/target": true,
    "**/.mvn": true,
    "**/mvnw": true,
    "**/mvnw.cmd": true
  },
  "java.debug.settings.showQualifiedNames": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [
    100
  ],
  "editor.wordWrapColumn": 100,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.wrapTabs": true,
  // Vim configuration to allow native find
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-h>": false,
    "<C-g>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-f>"
      ],
      "commands": [
        "actions.find"
      ]
    }
  ],
  "editor.fontFamily": "'Source Code Pro'",
  "editor.fontSize": 16
}