        "env": {
          "JAVA_HOME": "/home/josej/.sdkman/candidates/java/current"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}